{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "declaration": true,
      "declarationDir": "dist/types",
      "outDir": "dist",
      "strict": true,
      "moduleResolution": "node10",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "jsx": "react"
    },
    
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }